{% extends 'base.html.twig' %}

{% block title %}
	Create Invoice
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Create Invoice</h1>
		<div class="row">
			<div class="col-8 mx-auto">
				{% for message in app.flashes('success') %}
					<div class="alert alert-success">
						{{ message }}
					</div>
				{% endfor %}
			</div>
		</div>
		<div class="row">
			<div class="col-8 mx-auto">
				{{ form(form)}}
				</div>
			</div>
		</div>
	{% endblock %}
